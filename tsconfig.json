{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es6",
    "target": "es5",
    "strict": false,
    "importHelpers": false,
    "noImplicitReturns": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./custom-typings"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
